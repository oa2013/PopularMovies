<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DetailActivity"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/poster_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/poster_height"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@color/colorPrimary"/>

    <TextView
        android:id="@+id/title_text"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detail_padding"
        android:layout_marginLeft="@dimen/detail_padding"
        android:text="@string/placeholder" />

    <TextView
        android:id="@+id/release_date_text"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detail_padding"
        android:layout_marginLeft="@dimen/detail_padding"
        android:text="@string/placeholder" />

    <TextView
        android:id="@+id/vote_average_text"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detail_padding"
        android:layout_marginLeft="@dimen/detail_padding"
        android:text="@string/placeholder" />

    <TextView
        android:id="@+id/plot_synopsis_text"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detail_padding"
        android:layout_marginLeft="@dimen/detail_padding"
        android:layout_marginBottom="@dimen/detail_padding"
        android:text="@string/placeholder" />

</LinearLayout>

</ScrollView>
